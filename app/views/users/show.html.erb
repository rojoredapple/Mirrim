<% provide(:title, @user.name) %>
<div class = "row">
  <aside class = "col-md-4">
    <section class = "user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class = "col-md-8">
    <% if @user.journals.any? %>
      <h3> Journals (<%= @user.journals.count %>) </h3>
      <ol class = "journals">
        <%= render @journals %>
      </ol>
      <%= will_paginate @journals %>
    <% end %>
  </div>
</div>
