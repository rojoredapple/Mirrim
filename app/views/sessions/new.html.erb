<% provide(:title, "Log In") %>
<h1> Log In </h1>

<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |m| %>
      <%= m.label :email %>
      <%= m.email_field :email, class: 'form-control' %>

      <%= m.label :password %>
      <%= link_to "(Forgot Password)", new_password_reset_path %>
      <%= m.password_field :password, class: 'form-control' %>

      <%= m.label :remember_me, class: "checkbox inline" do %>
        <%= m.check_box :remember_me %>
        <span> Remember Me on this Device </span>
      <% end %>

      <%= m.submit "Log In", class: 'btn btn-primary' %>
    <% end %>

    <p> New User? <%= link_to "Sign Up!", signup_path %> </p>
  </div>
</div>
